import javax.swing.*;//mengimport resource code
import java.awt.*;//mengimport resource code
import java.awt.event.*;//mengimport resource code
public class Pendahuluan3 extends JFrame {//menandakan nama class dan memanggil JFrame
    Label first = new Label ("Masukkan Angka Pertama :"); //menginput komponen label
    Label second = new Label("Masukkan Angka Kedua :"); //menginput komponen label
    Label firstt = new Label ("Hasil :"); //menginput komponen label
    TextField tfi = new TextField(15); //menginput komponen TextField
    TextField tfie = new TextField(15); //menginput komponen TextField
    TextField tfield = new TextField(15); //menginput komponen TextField    
    JButton bt1 = new JButton("+"); //menginput komponen Button
    JButton bt2 = new JButton("-"); //menginput komponen Button
    JButton bt3 = new JButton("*"); //menginput komponen Button
    JButton bt4 = new JButton("/"); //menginput komponen Button
Pendahuluan3(){//mengawali method
    setTitle("Design");//memberi judul frame
    setSize(190, 300);//mengatur ukuran frame
    setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);//menjalankan perintah close
}//mengakhiri method
void Komponen(){//method void
    getContentPane().setLayout(new FlowLayout());//menginput flow layout
    add(first);//memasukkan komponen first
    add(tfi);//memasukkan komponen tfi
    add(second);//memasukkan komponen second
    add(tfie);//memasukkan komponen tfie
    add(firstt);//memasukkan komponen firstt
    add(tfield);//memasukkan komponen tfield
    getContentPane().add(bt1);//memasukkan komponen bt1
    bt1.setBounds(10, 180, 40, 30);//mengatur letak button
    getContentPane().add(bt2);//memasukkan komponen bt2
    bt2.setBounds(70, 180, 40, 30);//mengatur letak button
    getContentPane().add(bt3);//memasukkan komponen bt3
    bt3.setBounds(110, 180, 40, 30);//mengatur letak button
    getContentPane().add(bt4);//memasukkan komponen bt4
    bt4.setBounds(70, 210, 40, 30);//mengatur letak button
}//mengakhiri method
void reaksi(){//method void
    bt1.addMouseListener (new MouseListener() {//menginput event listener pada komponen
        public void mouseClicked(MouseEvent me) {//method mouseClicked
            int a1, a2, a3;//inisiasi, menginput data
            a1= Integer.parseInt(tfi.getText());//deklarasi
            a2 = Integer.parseInt(tfie.getText());//deklarasi
            a3 = a1+a2;//deklarasi
            tfield.setText(Integer.toString(a3));//memunculkan text
        }//mengakhiri method
        public void mousePressed(MouseEvent me) {}//method mousePressed
        public void mouseReleased(MouseEvent me) {}//method mouseReleased
        public void mouseEntered(MouseEvent me) {}//method mouseEntered
        public void mouseExited(MouseEvent me) {}//method mouseExited
    }); //mengakhiri method
    bt2.addMouseListener(new MouseListener() {//menginput event listener pada komponen
        public void mouseClicked(MouseEvent me) {//method mouseClicked
            int a1, a2, a3;//inisiasi, menginput data
            a1= Integer.parseInt(tfi.getText());//deklarasi
            a2= Integer.parseInt(tfie.getText());//deklarasi
            a3= a1-a2;//deklarasi
            tfield.setText(Integer.toString(a3));//memunculkan text
        }//mengakhiri method
        public void mousePressed(MouseEvent me) {}//method mousePressed
        public void mouseReleased(MouseEvent me) {}//method mouseReleased
        public void mouseEntered(MouseEvent me) {}//method mouseEntered
        public void mouseExited(MouseEvent me) {}//method mouseExited
    });//mengakhiri method
        bt3.addMouseListener(new MouseListener() {//menginput event listener pada komponen
        public void mouseClicked(MouseEvent me) {//method mouseClicked
            int a1, a2, a3;//inisiasi, menginput data
            a1= Integer.parseInt(tfi.getText());//deklarasi
            a2= Integer.parseInt(tfie.getText());//deklarasi
            a3= a1*a2;//deklarasi
            tfield.setText(Integer.toString(a3));//memunculkan text
        }//mengakhiri method
        public void mousePressed(MouseEvent me) {}//method mousePressed
        public void mouseReleased(MouseEvent me) {}//method mouseReleased
        public void mouseEntered(MouseEvent me) {}//method mouseEntered
        public void mouseExited(MouseEvent me) {}//method mouseExited
    });//mengakhiri method
        bt4.addMouseListener(new MouseListener() {//menginput event listener pada komponen
        public void mouseClicked(MouseEvent me) {//method mouseClicked
            int a1, a2, a3;//inisiasi, menginput data
            a1= Integer.parseInt(tfi.getText());//deklarasi
            a2= Integer.parseInt(tfie.getText());//deklarasi
            a3= a1/a2;//deklarasi
            tfield.setText(Integer.toString(a3));//memunculkan text
        }//mengakhiri method
        public void mousePressed(MouseEvent me) {}//method mousePressed
        public void mouseReleased(MouseEvent me) {}//method mouseReleased
        public void mouseEntered(MouseEvent me) {}//method mouseEntered
        public void mouseExited(MouseEvent me) {}//method mouseExited
    });//mengakhiri method
        setVisible(true);//mengatur agar output ditampilkan
}//mengakhiri method
    public static void main(String[] args) {//mengindikasi main method
        Pendahuluan3 pd = new Pendahuluan3();//membuat objek baru
        pd.Komponen();//memanggil method komponen
        pd.reaksi();//memanggil method reaksi
    }//mengakhiri method
}//mengakhiri method
